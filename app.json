{
    "name": "IftarSahurBot",
    "description": "iftar ve sahur vakitleri için basit telegram botu",
    "keywords": [
        "telegram",
        "iftar",
        "sahur",
        "ramazan",
        "ezan"
    ],
    "repository": "https://github.com/kursadHD/IftarSahur_bot",
    "env": {
        "BOT_TOKEN": {
            "description": "@BotFather'dan alın",
            "required": true
        },
        "BOT_USERNAME": {
            "description": "Botunuzun kullanıcı adı",
            "required": true
        },
        "API_ID": {
            "description": "https://my.telegram.org/apps adresinden alın",
            "required": true
        },
        "API_HASH": {
            "description": "https://my.telegram.org/apps adresinden alın",
            "required": true
        },
        "SUDO": {
            "description": "Telegram id'niz",
            "required": false
        },
        "DATABASE_URL": {
            "description": "Mongo Db Url",
            "required": false
        },
        "SESSION_NAME": {
            "description": "Öylesine isim ama doldur yani önemli",
            "required": false
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
